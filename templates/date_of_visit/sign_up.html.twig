{% extends 'base.html.twig' %}

{% block title %}Umów wizytę{% endblock %}

{% block body %}
    <div class="container-sm w-25">
        <h1 class="text-center">Umów wizytę</h1>
        <table class="table table-dark">
            <tr>
                <th>Data</th>
                <td>{{ visit.date|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Godzina</th>
                <td>{{ visit.time|date("H:i") }}</td>
            </tr>
            <tr>
                <th>Lekarz</th>
                <td>{{ visit.doctor.employee.name }} {{ visit.doctor.employee.surname }}</td>
            </tr>
            <tr>
                <th>Wybierz typ wizyty</th>
                {{ form_start(form) }}
                <td>{{ form_row(form.typeOfVisit) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </td>
                {{ form_end(form) }}
            </tr>
        </table>
    </div>
{% endblock %}