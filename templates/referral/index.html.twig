{% extends 'base.html.twig' %}

{% block title %}Recepta{% endblock %}

{% block body %}
    <div class="container-sm w-25">
        <h1 class="text-center">Skierowanie</h1>
        <table class="table table-dark">
            <tbody>
            <tr>
                <th scope="col">Klucz skierowania</th>
                <td>{{ referral.referralKey }}</td>
            </tr>
            <tr>
                <th scope="col">Typ skierowania</th>
                <td>{{ referral.typeOfReferral }}</td>

            </tr>
            <tr>
                <th scope="col">Data wystawienia</th>
                <td>{{ referral.dateOfIssue|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th scope="col">Rozpoznanie</th>
                <td>{{ referral.diagnosis }}</td>
            </tr>
            <tr>
                <th scope="col">informacje dodatkowe</th>
                <td>{{ referral.additionalInformation }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
