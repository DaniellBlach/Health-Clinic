{% extends 'base.html.twig' %}

{% block title %}Wystaw skierowanie{% endblock %}

{% block body %}
    <div class="container w-25">
    <div class="container form" style="margin-top:100px;">
        <h1 class="text-center">Wystaw skierowanie</h1>
        {{ form_start(form) }}
        {{ form_row(form.typeOfReferral) }}
        {{ form_row(form.diagnosis) }}
        {{ form_row(form.additionalInformation) }}
        <button type="submit" class="btn btn-green mt-2 mb-4">Wystaw skierowanie</button>
        {{ form_end(form) }}
    </div>
    </div>
{% endblock %}