{% extends 'base.html.twig' %}


{% block body %}
    <div class="container-sm w-75 form d-flex">
        <div class="col-6 mt-5">
            <form method="post">
                <h1 class=" mb-3 font-weight-normal pt-4 pb-3">Logowanie</h1>
                {% if error %}
                    <div class="text-danger">Podano niewłaściwe dane logowania</div>
                {% endif %}
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
                <label for="inputPassword">Hasło</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-green mt-4" type="submit">
                    Zaloguj się
                </button>
            </form>
        </div>
        <div class="col-6 mt-5 pb-5">
            <img class="img-fluid pe-5" src="/images/login.svg" alt="login image">
            <div class="text-center mt-2">
                <h5>Nie masz jeszcze konta?</h5>
                <a href="{{ path('register') }}">
                    <button class="btn btn-green">Zarejestruj się</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}