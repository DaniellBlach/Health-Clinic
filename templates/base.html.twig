{% from "layouts/sidebar.html.twig" import sidebar %}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Przychodnia Lekarska{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex">
{% if is_granted('IS_ANONYMOUS') %}
    <a href="{{ path('app_login') }}">
        <button class="btn btn-primary">Zaloguj się</button>
    </a>
    <a href="{{ path('register') }}">
        <button class="btn btn-info">Zarejestruj się</button>
    </a>
{% elseif is_granted('IS_AUTHENTICATED_FULLY') %}
    {{ sidebar() }}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
{% endif %}
{% block body %}{% endblock %}
</body>
</html>
