<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Przychodnia Lekarska{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<h1><a href="/index" class="link-dark">Przychodnia lekarska</a></h1>
{% if is_granted('IS_ANONYMOUS') %}
    <a href="/login">
        <button class="btn btn-primary">Zaloguj się</button>
    </a>
    <a href="/register">
        <button class="btn btn-info">Zarejestruj się</button>
    </a>
{% endif %}
{% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_USER') %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="/patients">
            <button class="btn btn-primary">Pacjenci</button>
        </a>
    {% else %}
        <a href="/patient">
            <button class="btn btn-primary">Dane Pacjenta</button>
        </a>
    {% endif %}
    <a href="/change/password">
        <button class="btn btn-primary">Zmień hasło</button>
    </a>
    <a href="/logout">
        <button class="btn btn-danger">Wyloguj</button>
    </a>
{% endif %}
{% block body %}{% endblock %}
</body>
</html>
