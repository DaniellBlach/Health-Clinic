{% macro sidebar() %}
    <div class="flex-shrink-0 p-3 bg-primary" style="width: 280px; height: 100vh">
        <a href="/" class="d-flex align-items-center pb-3 mb-3 text-decoration-none border-bottom">
            <span class="fs-5 ms-2 fw-semibold text-white">Przychodnia lekarska</span>
        </a>
        <ul class="list-unstyled ps-0">
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYEE') %}
                <li class="nav-item">
                    <a href="{{ path('employees') }}" class="nav-link">
                        <button class="btn btn-primary">Pracownicy</button>
                    </a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a href="{{ path('add_employee') }}" class="nav-link">
                            <button class="btn btn-primary">Dodaj pracownika</button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('add_doctor') }}" class="nav-link">
                            <button class="btn btn-primary">Dodaj lekarza</button>
                        </a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a href="{{ path('patients') }}" class="nav-link">
                        <button class="btn btn-primary">Pacjenci</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('available_visits') }}" class="nav-link">
                        <button class="btn btn-primary">Dostępne terminy wizyt</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('visits') }}" class="nav-link">
                        <button class="btn btn-primary">Umówione terminy wizyt</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('add_visits') }}" class="nav-link">
                        <button class="btn btn-primary">Dodaj nowe terminy wizyt</button>
                    </a>
                </li>
                <li class="border-top my-3"></li>
                <li class="nav-item">
                    <a href="{{ path('employee') }}" class="nav-link">
                        <button class="btn btn-primary">Moje Dane</button>
                    </a>
                </li>
            {% elseif is_granted('ROLE_PATIENT') %}

                <li class="nav-item">
                    <a href="{{ path('medical_visits',{patient: app.user.patient.id}) }}" class="nav-link">
                        <button class="btn btn-primary">Historia leczenia</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('all_tests',{patient: app.user.patient.id}) }}" class="nav-link">
                        <button class="btn btn-primary">Wyniki badań</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('all_patient_referrals',{patient: app.user.patient.id}) }}" class="nav-link">
                        <button class="btn btn-primary">Wystawione skierowania</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('all_patient_prescription_packages',{patient: app.user.patient.id}) }}"
                       class="nav-link">
                        <button class="btn btn-primary">Wystawione Recepty</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('available_visits') }}" class="nav-link">
                        <button class="btn btn-primary">Umów Wizytę lekarską</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('visits') }}" class="nav-link">
                        <button class="btn btn-primary">Umówione terminy wizyt</button>
                    </a>
                </li>
                <li class="border-top my-3"></li>
                <li class="nav-item">
                    <a href="{{ path('patient',{patient: app.user.patient.id}) }}" class="nav-link link-dark">
                        <button class="btn btn-primary">Moje Dane</button>
                    </a>
                </li>
            {% elseif is_granted('ROLE_DOCTOR') %}

                <li class="nav-item">
                    <a href="{{ path('patients') }}" class="nav-link">
                        <button class="btn btn-primary">Pacjenci</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('all_doctor_referrals',{doctor: app.user.employee.doctor.id}) }}" class="nav-link">
                        <button class="btn btn-primary">Wystawione skierowania</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('all_doctor_prescription_packages',{doctor: app.user.employee.doctor.id}) }}"
                       class="nav-link">
                        <button class="btn btn-primary">Wystawione Recepty</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('available_visits') }}" class="nav-link">
                        <button class="btn btn-primary">Dostępne terminy wizyt</button>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('visits') }}" class="nav-link">
                        <button class="btn btn-primary">Umówione terminy wizyt</button>
                    </a>
                </li>
                <li class="border-top my-3"></li>
                <li class="nav-item">
                    <a href="{{ path('doctor',{doctor: app.user.employee.doctor.id}) }}" class="nav-link">
                        <button class="btn btn-primary">Moje Dane</button>
                    </a>
                </li>
            {% endif %}
            <li class="border-top my-3"></li>
            <li class="nav-item text-center">
                <a href="{{ path('app_logout') }}" class="nav-link">
                    <button class="btn btn-danger">Wyloguj</button>
                </a>
            </li>
        </ul>
    </div>
{% endmacro %}