{% extends 'base.html.twig' %}

{% block title %}Dane Pacjenta{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="container-sm w-25">
            <h1 class="text-center">Dane pacjenta</h1>
            <table class="table table-dark">
                <tbody>
                <tr>
                    <th>Imię</th>
                    <td>{{ patient.name }}</td>
                </tr>
                <tr>
                    <th>Nazwisko</th>
                    <td>{{ patient.surname }}</td>
                </tr>
                <tr>
                    <th>Pesel</th>
                    <td>{{ patient.pesel }}</td>
                </tr>
                <tr>
                    <th>Data urodzenia</th>
                    <td>{{ patient.dateOfBirth|date("d/m/Y") }}</td>
                </tr>
                <tr>
                    <th>Płeć</th>
                    <td>{{ patient.sex }}</td>
                </tr>
                <tr>
                    <th>Numer telefou</th>
                    <td>{{ patient.phoneNumber }}</td>
                </tr>
                <tr>
                    <td colspan="1" class="text-center"><a href="{{ path('patient_edit',{patient: patient.id}) }}"><button class="btn btn-danger">Edytuj dane</button></a></td>
                    <td colspan="1" class="text-center"><a href="{{ path('change_password') }}"><button class="btn btn-danger">Zmień hasło</button></a></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
