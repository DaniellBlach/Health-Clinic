{% extends 'base.html.twig' %}

{% block title %}Wszyscy pacjenci{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="container-sm w-75">
            <h1 class="text-center">Pacjenci</h1>
            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">Imię</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col">Pesel</th>
                    <th scope="col">Płeć</th>
                    <th scope="col">Data urodzenia</th>
                    <th scope="col">numer telefonu</th>
                    <th scope="col">Operacje</th>
                </tr>
                </thead>
                <tbody>
                {% for patient in patients %}
                    <tr>
                        <td>{{ patient.name }}</td>
                        <td>{{ patient.surname }}</td>
                        <td>{{ patient.pesel }}</td>
                        <td>{{ patient.sex }}</td>
                        <td>{{ patient.dateOfBirth|date("d/m/Y") }}</td>
                        <td>{{ patient.phoneNumber }}</td>
                        <td><a href="{{ path('patient_edit',{patient: patient.id}) }}">
                                <button class="btn btn-danger">Edytuj dane</button>
                            </a>
                            <a href="{{ path('add_test_results',{patient: patient.id}) }}">
                                <button class="btn btn-primary">Dodaj Wyniki badań</button>
                            </a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
