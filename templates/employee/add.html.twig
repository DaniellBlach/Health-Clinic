{% extends 'base.html.twig' %}

{% block title %}Dodaj pracownika{% endblock %}

{% block body %}
    <div class="container-sm w-25">
        <h1>Dodaj pracownika</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_start(employeeForm) }}
        {{ form_row(employeeForm.name) }}
        {{ form_row(employeeForm.surname) }}
        {{ form_rest(registrationForm) }}
        <button type="submit" class="btn btn-dark mt-2">Dodaj pracownika</button>
        {{ form_end(employeeForm) }}
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}